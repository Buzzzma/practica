<Window x:Class="Autorization.Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization"
        mc:Ignorable="d" ResizeMode="NoResize" Loaded="Window_Loaded"
        Title="Form" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="0 10 0 0" Width="300">
            <TextBlock HorizontalAlignment="Center" Margin="0 0 0 10" Text="Оформление заказа" FontSize="22"/>
            <ComboBox Name="marks_cb" FontSize="22" Margin="0 0 0 10">
                
            </ComboBox>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Введите имя пользователя:"/>
                <TextBox Name="username_tb" FontSize="22" />
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Введите фамилию пользователя:"/>
                <TextBox Name="usersurname_tb" FontSize="22" />
            </StackPanel>
            <TextBox x:Name="count_cb" Margin="0 0 0 10"  FontSize="22" Text="1"/>
            <Button Click="Buy_Button" FontSize="22" Content="Оформить заказ"/>
        </StackPanel>
    </Grid>
</Window>
