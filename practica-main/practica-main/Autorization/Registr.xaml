<Window x:Class="Autorization.Registr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization"
        mc:Ignorable="d"
        Title="Registr" Height="450" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Регистрация" 
                   HorizontalAlignment="Center" 
                   FontSize="30"/>
            <TextBox x:Name="log_tb"
                     Height="50" Width="300" 
                     Text="Login" FontSize="30"
                     Margin="0 20 0 0"/>
            <TextBox x:Name="pass_tb"
                     Height="50" Width="300" 
                     Text="Password" FontSize="30"
                     Margin="0 20 0 0"/>
            <StackPanel Margin="0 20 0 0" Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Есть аккаунт?"/>
                <Button Click="auth_Click" Content="Войти"/>
            </StackPanel>
            <Button Content="Зарегистрироваться" Height="40" Width="300"
                    Margin="0 20 0 0" FontSize="30"
                    Click="registr_Click"/>
        </StackPanel>
    </Grid>
</Window>
